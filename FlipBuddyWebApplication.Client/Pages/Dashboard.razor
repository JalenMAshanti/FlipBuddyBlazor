@page "/dashboard"

@using FlipBuddyWebApplication.Client.Components
@rendermode InteractiveServer


<div class="sidebar"> 
    <NavBar OnNavButtonClick="ChangeView"/>
</div>

<div class="d-flex flex-column" style="padding:2vh; padding-left:0; background:#3E7E55; width:100%; height:100%; ">
    <div class="col-12 flex-grow-1" style="height: 100%; width:100%;">
		<div class="content px-4 py-3" style="overflow-x:auto; background-color: white; height: 100%; width:100%; border-radius:2vh; scrollbar-width:none;">
            @if (currentView == "Home")
            {
                <HomeComponent/>
            }
            else if (currentView == "Search")
            {
                <ProductSearchComponent/>
            }
            else if (currentView == "Items")
            {
                <MyItemsComponent/>    
            }

		</div>
    </div>    
</div>


@code {
    private string currentView = "Home";


    private void ChangeView(string view)
    {
        currentView = view;
        StateHasChanged();
    }
}